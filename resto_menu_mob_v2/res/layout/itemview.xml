<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="vertical" android:background="@color/item_background" >


    <ImageView
        android:id="@+id/itemImage"
         android:layout_gravity="center"  android:layout_height="130dip" 
        android:layout_width="130dip" android:scaleType="center"
         />
    <TextView
        android:id="@+id/itemTitle"
        android:gravity="center" android:maxHeight="70dip"  
        android:layout_width="match_parent"
        android:layout_height="70dip" android:textSize="18sp"
        android:ellipsize="end" android:textColor="@color/item_text" 
        android:text="" />

</LinearLayout>

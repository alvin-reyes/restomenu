<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"  android:background="@color/item_background" android:padding="10dip" >


    <ImageView
        android:id="@+id/itemImage"
         android:layout_gravity="center"  android:layout_height="50dip" 
        android:layout_width="50dip" android:scaleType="center"
         />
    
    <LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"  android:layout_gravity="center_vertical">
    
    <LinearLayout android:layout_width="wrap_content" android:padding="10dip"
    android:layout_height="wrap_content" android:orientation="vertical" 
    android:layout_gravity="center_vertical" android:layout_weight="1">
    
    <TextView
        android:id="@+id/itemTitle"
       android:gravity="center_vertical"   android:textColor="@color/item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textSize="18sp"
                android:ellipsize="end"
        android:text="" />
    
    <TextView
        android:id="@+id/itemDescription"
        android:gravity="center_vertical"    android:textColor="@color/item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textSize="14sp"
                android:ellipsize="end"
        android:text="" />
	
    </LinearLayout>
    <TextView
        android:id="@+id/itemPrice" android:textColor="@color/item_text"
        android:gravity="center_vertical"   android:layout_gravity="center_vertical" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textSize="20sp"
                android:ellipsize="end"
        android:text="" />
 </LinearLayout>   
</LinearLayout>
